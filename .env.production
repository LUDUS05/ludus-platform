# Production Environment Variables for LUDUS Platform
# Replace with your actual production values

# Database (MongoDB Atlas Production)
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/ludus_production?retryWrites=true&w=majority
DATABASE_NAME=ludus_production

# Authentication (Generate new secrets for production)
JWT_SECRET=your-production-jwt-secret-32-chars-minimum
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-production-refresh-jwt-secret-32-chars-minimum
JWT_REFRESH_EXPIRE=30d

# Moyasar Payment Gateway (Saudi Arabia) - PRODUCTION KEYS
MOYASAR_PUBLISHABLE_KEY=pk_live_your_moyasar_live_publishable_key
MOYASAR_SECRET_KEY=sk_live_your_moyasar_live_secret_key
MOYASAR_WEBHOOK_SECRET=your_moyasar_live_webhook_secret
MOYASAR_BASE_URL=https://api.moyasar.com/v1

# Cloudinary (Production)
CLOUDINARY_CLOUD_NAME=your-production-cloud-name
CLOUDINARY_API_KEY=your-production-api-key
CLOUDINARY_API_SECRET=your-production-api-secret

# Email (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password
FROM_EMAIL=noreply@ludusapp.com
FROM_NAME=LUDUS Platform

# Application
NODE_ENV=production
PORT=5000
CLIENT_URL=https://your-frontend-domain.vercel.app

# Admin User
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
ADMIN_EMAIL=admin@ludusapp.com
ADMIN_PASSWORD=SecureProductionPassword123!