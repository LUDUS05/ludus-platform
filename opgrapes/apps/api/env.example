# Environment Variables for OPGrapes API
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/opgrapes?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Redis Configuration (for Analytics & Caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Analytics Configuration
MIXPANEL_TOKEN=your-mixpanel-token-here
ANALYTICS_USER_TRACKING=true
ANALYTICS_PAGE_VIEW_TRACKING=true
ANALYTICS_CLICK_TRACKING=true
ANALYTICS_FORM_TRACKING=true
ANALYTICS_SCROLL_TRACKING=true
ANALYTICS_PERFORMANCE_TRACKING=true
ANALYTICS_ERROR_TRACKING=true
ANALYTICS_REVENUE_TRACKING=true
ANALYTICS_CONVERSION_TRACKING=true
ANALYTICS_RETENTION_TRACKING=true

# Performance Thresholds
SLOW_RESPONSE_THRESHOLD=1000
ERROR_RATE_THRESHOLD=5
MEMORY_USAGE_THRESHOLD=512
CPU_USAGE_THRESHOLD=80

# Privacy Configuration
ANONYMIZE_IPS=true
RESPECT_DO_NOT_TRACK=true
GDPR_COMPLIANCE=true

# Production URLs (update these for deployment)
# CORS_ORIGIN=https://your-app.vercel.app
# NEXT_PUBLIC_API_URL=https://your-api.onrender.com
