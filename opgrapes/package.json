{
  "name": "opgrapes",
  "private": true,
  "packageManager": "npm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "eslint .",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "start": "turbo run start",
    "format": "prettier -w .",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "dev:all": "concurrently -n web,api -c blue,green \"npm run dev:web\" \"npm run dev:api\"",
    "build:web": "npm --workspace apps/web run build",
    "test:ci:local": "bash scripts/test-ci.sh",
    "test:ci:local:win": "powershell -ExecutionPolicy Bypass -File scripts/test-ci.ps1",
    "setup:git": "powershell -ExecutionPolicy Bypass -File scripts/setup-git.ps1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5"
  }
}
