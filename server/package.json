{
  "name": "ludus-server",
  "version": "1.0.0",
  "description": "Backend for LUDUS platform",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "smoke": "node scripts/smoke.js",
    "dev": "cross-env NODE_ENV=development nodemon src/app.js",
    "test": "jest --runInBand",
    "lint": "eslint src --ext .js",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "seed": "cross-env NODE_ENV=development node src/seeds/index.js",
    "test-api": "node test-api.js",
    "setup": "npm run seed && echo 'âœ… Setup complete! Run npm run dev to start the server.'",
    "build": "npm ci --production",
    "postinstall": "echo 'Backend dependencies installed successfully'"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "semver": "^6.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  }
}
